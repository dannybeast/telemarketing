extends ../layout/layout
include ../sections/breadcrumbs/breadcrumbs
include ../sections/advantages/advantages
include ../sections/service-intro/service-intro
include ../sections/solution-intro/solution-intro
include ../sections/form/form
include ../sections/telemarketing-usage/telemarketing-usage

block variables 
  - var pageClass = '';
  - var pageTitle = "Телемаркетинг Онлайн";
  - var pageDescription = ""
  - var pageName = "telemarketing-online"

block content
  +b.MAIN(role='main')
    +breadcrumbs
      a(href="#") Главная
      span.separator /
      a(href="#") Решения
      span.separator /
      a(href="#") Telemarketing Online

    +solution-intro("--breadcrumbs", "img/solution.jpg")
      +e.H1.title Онлайн-сервис, сочетающий простоту интерфейса и мультизадачность

    +advantages("Преимущества", "--big")
      ul
        li Все виды рассылок в одном личном кабинете
        li Автоматическое транслитирование текста
        li Статистика e-mail-рассылки
        li Отправка сообщения по местному времени
      ul
        li Актуализация базы данных с помощью HLR-запроса
        li Функция приема сообщений на федеральные и короткие номера
        li Создание запланированных рассылок или автоматических рассылок по дате рождения
    
    +service-intro("img/phone-sms.png","--service --left --pb60")
      +e.H1.title SMS рассылка
      +e.P.info Распространение персонализированных информационных или рекламных сообщений от вашей компании с помощью SMS сообщений на мобильные устройства. SMS-информирование широко используется банками и платежными системами, ритейлом, службами заказа еды и доставки такси, а также государственными заказчиками. Стоит отметить, что 97,5% получателей открывают сообщение в течение 5 секунд после его получения
    +service-intro("img/phone-get-sms.png","--service --pb60")
      +e.H1.title Прием SMS
      +e.P.info Принимайте входящие SMS-сообщения на закрепленный за вами номер. Используйте эту услугу для двустороннего обмена информацией между вами и вашими клиентами, Например, для проведения викторин, опросов по качеству работы или отправке сервисной информации
    +service-intro("img/hlr.png","--service --left --pb60 mb-md-5")
      +e.H1.title HLR-запрос
      +e.P.info Услуга по проверке статуса мобильного номера абонента: активен, не обслуживается, в роуминге или домашней сети. Сервис незаметен для абонента, так как запрос отправляется к базе данных оператора сотовой связи, обслуживающего данный телефонный номер. Услуга позволяет актуализировать клиентскую базу
 
    +telemarketing-usage()
      +e.H2.title Telemarketing Online используют
      +left-intro-item("photo","img/t-online.jpg")
        +e.H1.title Ресторанный бизнес
        +e.P.description Самый простой способ взаимодействия, он не предполагает долгих интеграций. Для того, чтобы начать пользоваться Telemarketing On-line, достаточно зарегистрироваться на сайте.
        
        +b.A(href="#", class="btn-link --blue")
          span Читать полностью
          svg(xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', width='19px', height='11px')
            path(fill-rule='evenodd', d='M13.472,10.999 L12.179,10.999 L16.259,6.041 L-0.000,6.000 L-0.000,5.000 L16.259,4.956 L12.179,-0.002 L13.472,-0.002 L18.999,5.499 L13.472,10.999 Z')
    
    +form-section("Начать", "Личный кабинет")
      +e.H2.title Начните сегодня
      +e.P.info Подключение бесплатное, услуги оказываются cписанием со счета
    